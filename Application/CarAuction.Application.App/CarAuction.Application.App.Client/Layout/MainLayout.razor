@inherits LayoutComponentBase

<MudDialogProvider />
<MudPopoverProvider />
<MudSnackbarProvider />
<MudThemeProvider Theme="CustomTheme" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudPaper Class="d-flex align-content-center flex-wrap flex-grow-1 justify-center" Style="background-color:transparent!important;" Width="100%" Height="100%" Elevation="0">
            <MudLink Underline="Underline.None" Href="/" Class="main-link-image" />
        </MudPaper>
        <MudSpacer />        
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

